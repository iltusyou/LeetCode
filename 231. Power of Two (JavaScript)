/**
 * @param {number} n
 * @return {boolean}
 */
var isPowerOfTwo = function(n) {
  if(n<=0)
    return false;
  if(n==1)
    return true;
    
  var result = true;        
  while (n > 2) {
    if (n % 2 == 0){
        n = n / 2;
    }
    else {
      result = false;
      break;
    }
  }
  return result;
};
